<Window x:Class="DimaProektSecond.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimaProektSecond"
        mc:Ignorable="d"
        Title="MainWindow" Height="790" Width="800">
    <Grid Margin="0,0,0,-274">
        <StackPanel Margin="0,0,0,-256">
            <TextBox x:Name="BarcodeInput" Width="200" Margin="10" Text="Enter Barcode" GotFocus="BarcodeInput_GotFocus" LostFocus="BarcodeInput_LostFocus"/>
            <Button Content="Add Product" Click="AddProduct_Click" Width="200" Margin="10"/>
            <ListBox x:Name="ProductsList" Width="400" Height="200" Margin="10"/>
            <ListBox x:Name="ScannedProductsList" Width="400" Height="200" Margin="10"/>
            <PasswordBox x:Name="PinCodeInput" Width="200" Margin="10" PasswordChanged="PinCodeInput_PasswordChanged" GotFocus="PinCodeInput_GotFocus" LostFocus="PinCodeInput_LostFocus"/>
            <Button Content="Remove Product" Click="RemoveProduct_Click" Width="200" Margin="10"/>
            <Button Content="Print Receipt" Click="PrintReceipt_Click" Width="200" Margin="10"/>
            <Button Content="Calculate Discount" Click="CalculateDiscount_Click" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
